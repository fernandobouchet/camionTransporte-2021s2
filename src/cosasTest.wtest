describe "Tests de embalaje de seguridad cargado con 30 kg de residuos radioactivos" {
	method initialize() {
		residuosRadioactivos.setPeso(30)
		embalajeDeSeguridad.envuelve(residuosRadioactivos)
	}
	test "Peso" {
		assert.equals(embalajeDeSeguridad.peso(), 30)
	}
	test "Nivel de peligrosidad" {
		assert.equals(embalajeDeSeguridad.nivelPeligrosidad(), 100)
	}
}

describe "Tests de contenedor portuario" {
	method initialize() {
		contenedorPortuario.agregar(bumblebee)
		contenedorPortuario.agregar(knightRider)
		contenedorPortuario.agregar(arenaAGranel)
	}
	test "Peso" {
		assert.equals(contenedorPortuario.peso(), 1400)
	}
	test "Nivel de peligrosidad" {
		assert.equals(contenedorPortuario.nivelPeligrosidad(), 15)
	}
}