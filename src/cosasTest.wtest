import camion.*
import cosas.*

describe "Tests de paquete de ladrillos" {
	method initialize() {
		paqueteDeLadrillos.setCantidad(500)
	}
	test "Peso" {
		assert.equals(paqueteDeLadrillos.peso(), 1000)
	}
	test "Nivel de peligrosidad" {
		assert.equals(paqueteDeLadrillos.nivelPeligrosidad(), 2)
	}
}

describe "Tests de batería antiaérea con misiles" {
	method initialize() {
		bateriaAntiaerea.cargarMisiles()
	}
	test "Peso" {
		assert.equals(bateriaAntiaerea.peso(), 300)
	}
	test "Nivel de peligrosidad" {
